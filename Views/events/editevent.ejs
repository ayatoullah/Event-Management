<%include ../layout/header%>
<body>
     
    <form   method="POST">
            <input type="text" name="_id"  value="<%=event._id%>"disabled/></br>
           
            <input type="text" name="title" value="<%=event.title%>"></br>
            <select name="mainspeaker">
                        <%event.allSpeakers.forEach((speaker)=>{%>
                       
                        <option value="<%=speaker._id%>"><%=speaker.name%></option>
                        <%})%>
                    </select>
                    <select name="otherspeakers" multiple>
                            <%event.allSpeakers.forEach((speaker)=>{%>
                         
                            <option value="<%=speaker._id%>"><%=speaker.name%></option>
                            <%})%>
                    </select>
 
            <input type="submit" value="update here"></br>
    </form>
</body>
